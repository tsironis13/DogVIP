<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>
    <style name="AppTheme" parent="Base.AppTheme" />
    <style name="DashboardActivityTheme" parent="Base.AppTheme" />
    <style name="UserProfileAppTheme" parent="Base.AppTheme" />
    <!-- TOOLBAR -->
    <style name="ToolbarTheme" parent="Base.AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- BUTTON -->
    <style name="AppBtnStyle" parent="Material.Drawable.Ripple">
        <item name="rd_rippleColor">@color/colorPrimary</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
    </style>

    <style name="TouchRipplePrimaryStyle" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_rippleColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
    </style>

    <style name="TouchRippleDarkStyle" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_rippleColor">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
    </style>

    <!-- IMAGE UPLOAD PROGRESS BAR -->
    <style name="ProcessingImageProgressBarStyle">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- SNACKBARS -->
    <style name="BaseSnackBar" parent="Material.Widget.SnackBar.Mobile">
        <item name="sb_backgroundColor">@android:color/white</item>
        <item name="sb_textColor">@android:color/holo_red_light</item>
        <item name="sb_actionTextColor">@android:color/black</item>
    </style>

    <style name="SnackBarSingleLine" parent="BaseSnackBar">
        <item name="sb_height">48dp</item>
        <item name="sb_actionText">@string/close</item>
        <item name="sb_duration">2000</item>
    </style>

    <style name="SnackBarWithAction" parent="BaseSnackBar">
        <item name="sb_height">48dp</item>
        <item name="sb_actionText">@string/retry</item>
    </style>

    <style name="SnackBarMultiLine" parent="BaseSnackBar">
        <item name="sb_height">80dp</item>
        <item name="sb_actionText">@string/close</item>
        <item name="sb_duration">2000</item>
        <item name="sb_singleLine">false</item>
    </style>

    <style name="SnackBarLongDuration" parent="BaseSnackBar">
        <item name="sb_height">80dp</item>
        <item name="sb_actionText">@string/close</item>
        <item name="sb_duration">4000</item>
        <item name="sb_singleLine">false</item>
    </style>

    <!-- CheckBox white -->
    <style name="checkBoxWhite" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


